<config>
    <sections>
        <i4gaconversiontrack translate="label" module="i4gaconversiontrack">
            <label>GAConversionTrack</label>
            <tab>i4all</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>150</sort_order>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <order_status tranlate="label">
                            <label>Order Statuses to Track for Ecommerce conversions</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>i4gaconversiontrack/system_config_form_field_statustotrack</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_status>
                        <page_title translate="label comment">
                            <label>Success Page Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>0</can_be_empty>
                            <comment><![CDATA[Ex: Checkout success]]></comment>
                        </page_title>
                        <page_url translate="label">
                            <label>Success Page URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>0</can_be_empty>
                            <comment><![CDATA[Ex: /checkout/onepage/success]]></comment>
                        </page_url>
                        <product_whitelist translate="label">
                            <label>Product Whitelist</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>i4gaconversiontrack/system_config_source_product</source_model>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_whitelist>
                    </fields>
                </general>
                <social translate="label">
                    <label>Social interactions</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <fb_like translate="label">
                            <label>Track Facebook like interactions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fb_like>
                        <fb_unlike translate="label">
                            <label>Track Facebook unlike interactions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fb_unlike>
                        <fb_share translate="label">
                            <label>Track Facebook share interactions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[For some reason observing this event doesnt work!]]></comment>
                        </fb_share>
                        <twitter_interactions translate="label">
                            <label>Track Twitter interactions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This tracks the following actions; follow, unfollow, tweet, retweet, favorite<br/><b>TODO:</b> Twitter not implemented yet!]]></comment>
                        </twitter_interactions>
                    </fields>
                </social>
                <ga_settings translate="label comment">
                    <label>Magento Google Analytics settings</label>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[<i>Note: These settings will save and read from the general Google API configuration</i>]]></comment>
                    <fields>
                        <active translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <config_path>google/analytics/active</config_path>
                        </active>
                        <gtm_id translate="label">
                            <label>Google Tag Manager Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gtm_id>
                        <account_id translate="label">
                            <label>Account Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </account_id>
                        <account translate="label">
                            <label>Account Number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <config_path>google/analytics/account</config_path>
                        </account>
                        <anonymization translate="label">
                            <label>Enable IP anonymization</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <config_path>google/analytics/anonymization</config_path>
                        </anonymization>
                    </fields>
                </ga_settings>
                <analytics translate="label comment">
                    <label>Google Analytics API</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[<i>Note: These configurations are only needed for auditing Google Analytics to make sure that the ecommerce data is in sync.</i>]]></comment>
                    <fields>
                        <client_id translate="label">
                            <label>Client Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </client_id>
                        <client_secret translate="label">
                            <label>Client Secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </client_secret>
                        <client_token_expires translate="label">
                            <label>Client Token Expiry Seconds</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<i>POPULATE THIS VALUE BY CLICKING THIS LINK: <a href="/ga/oauth/token/">Get the Client Token</a></i>]]></comment>
                        </client_token_expires>
                        <client_token_created translate="label">
                            <label>Client Token Created</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<i>POPULATE THIS VALUE BY CLICKING THIS LINK: <a href="/ga/oauth/token/">Get the Client Token</a></i>]]></comment>
                        </client_token_created>
                        <client_access translate="label">
                            <label>Client Access Token</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<i>POPULATE THIS VALUE BY CLICKING THIS LINK: <a href="/ga/oauth/token/">Get the Client Token</a></i>]]></comment>
                        </client_access>
                        <client_token translate="label">
                            <label>Client Token</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<i>POPULATE THIS VALUE BY CLICKING THIS LINK: <a href="/ga/oauth/token/">Get the Client Token</a></i>]]></comment>
                        </client_token>
                    </fields>
                </analytics>
            </groups>
        </i4gaconversiontrack>
    </sections>
</config>